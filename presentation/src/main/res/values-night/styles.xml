<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="CardHolderTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/colorForegroundNight</item>

        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:navigationBarColor">@color/colorForegroundNight</item>

        <item name="colorPrimary">@color/colorForegroundNight</item>
        <item name="colorOnPrimary">@color/colorTextActiveNight</item>
        <item name="colorSecondary">@color/colorBackgroundNight</item>
        <item name="colorOnSecondary">@color/colorTextNotActiveNight</item>

    </style>


    <style name="StyleToolBarText">
        <item name="fontFamily">@font/comfortaa_bold</item>
        <item name="android:textSize">@dimen/_10gkdp</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="StyleButtonPrimary" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_25gkdp</item>
        <item name="android:layout_marginStart">@dimen/_5gkdp</item>
        <item name="android:layout_marginEnd">@dimen/_5gkdp</item>
        <item name="android:layout_marginBottom">@dimen/_5gkdp</item>
        <item name="android:fontFamily">@font/comfortaa_regular</item>
        <item name="android:textSize">@dimen/_10gkdp</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="textAllCaps">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/background_button_corners</item>
    </style>


</resources>