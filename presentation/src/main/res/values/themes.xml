<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CardHolder" parent="Theme.Design.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorSecondary">@color/color_secondary</item>

        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/color_primary</item>

        <!-- Navigation bar color. -->
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor">@color/color_primary</item>

<!--        <item name="android:textColor">@color/black</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CardHolder.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Style_Text_medium">
        <item name="fontFamily">@font/comfortaa_medium</item>
    </style>

</resources>