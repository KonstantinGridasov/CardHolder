<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="CardHolderTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/colorForegroundDay</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor">@color/colorForegroundDay</item>

        <item name="colorPrimary">@color/colorForegroundDay</item>
        <item name="colorOnPrimary">@color/colorTextActiveDay</item>
        <item name="colorSecondary">@color/colorBackgroundDay</item>
        <item name="colorOnSecondary">@color/colorTextNotActiveDay</item>
    </style>

    <style name="StyleToolBarText">
        <item name="fontFamily">@font/comfortaa_bold</item>
        <item name="android:textSize">@dimen/_10gkdp</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="Style_Text_medium">
        <item name="fontFamily">@font/comfortaa_medium</item>
    </style>

    <style name="StyleButtonPrimary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_25gkdp</item>
        <item name="android:layout_marginStart">@dimen/_5gkdp</item>
        <item name="android:layout_marginEnd">@dimen/_5gkdp</item>
        <item name="android:layout_marginBottom">@dimen/_5gkdp</item>
        <item name="android:fontFamily">@font/comfortaa_regular</item>
        <item name="android:textSize">@dimen/_10gkdp</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="textAllCaps">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/background_button_corners</item>
    </style>


    <style name="StyleNameAddHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_12gkdp</item>
        <item name="android:fontFamily">@font/comfortaa_bold</item>
        <item name="android:textSize">@dimen/_12gkdp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="textAllCaps">false</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="StyleNameInput">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/comfortaa_regular</item>
        <item name="android:textSize">@dimen/_9gkdp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:layout_marginEnd">@dimen/_10gkdp</item>
        <item name="android:layout_marginTop">@dimen/_15gkdp</item>
        <item name="android:layout_marginStart">@dimen/_10gkdp</item>
        <item name="android:hint">@string/input_text</item>
        <item name="paddingStart">@dimen/_10gkdp</item>
        <item name="textAllCaps">false</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="StyleDialogButton">
        <item name="android:layout_width">@dimen/_75gkdp</item>
        <item name="android:layout_height">@dimen/_30gkdp</item>
        <item name="android:fontFamily">@font/comfortaa_regular</item>
        <item name="android:textSize">@dimen/_9gkdp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:layout_marginEnd">@dimen/_10gkdp</item>
        <item name="android:layout_marginTop">@dimen/_5gkdp</item>
        <item name="android:layout_marginStart">@dimen/_10gkdp</item>
        <item name="textAllCaps">false</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>