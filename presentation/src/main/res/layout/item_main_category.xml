<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="isDefaultCat"
            type="java.lang.Boolean" />

        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:id="@+id/root_categories_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_main_categories">

        <TextView
            android:id="@+id/text_main_category"
            style="@style/Style_Text_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5gkdp"
            android:gravity="center_horizontal|center_vertical"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="@dimen/_10gkdp" />
    </LinearLayout>
</layout>