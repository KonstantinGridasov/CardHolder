<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.gkreduction.cardholder.ui.dialog.DialogInfoViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20gkdp"
            android:layout_margin="@dimen/_20gkdp"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/text_dialog_info"
            android:textColor="@color/black"
            android:textSize="@dimen/_10gkdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25gkdp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/_25gkdp"
                android:layout_marginStart="@dimen/_20gkdp"
                android:layout_weight=".3"
                android:background="@drawable/category_not_active"
                android:text="cancel" />

            <View
                android:layout_width="@dimen/_20gkdp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/ok"
                android:layout_width="0dp"
                android:layout_height="@dimen/_25gkdp"
                android:layout_marginEnd="@dimen/_20gkdp"
                android:layout_weight=".3"
                android:background="@drawable/category_not_active"
                android:text="ok" />
        </LinearLayout>

    </LinearLayout>

</layout>