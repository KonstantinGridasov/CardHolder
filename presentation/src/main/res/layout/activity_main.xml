<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.activity.main.MainActivity">

    <data>

        <variable
            name="itemListener"
            type="com.gkreduction.cardholder.ui.activity.main.adapter.CardClickListener" />

        <variable
            name="viewModel"
            type="com.gkreduction.cardholder.ui.activity.main.MainViewModel" />


        <variable
            name="categoryChoose"
            type="com.gkreduction.cardholder.ui.dialog.adapter.CategoryClickListener" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/image_background">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:id="@+id/tv_category_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/app_name"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_12gkdp" />

        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:layout_marginTop="@dimen/_10gkdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/category_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2gkdp"
                    android:layout_marginTop="@dimen/_3gkdp"
                    android:layout_marginEnd="@dimen/_2gkdp"
                    android:background="@android:color/transparent"
                    android:scrollbars="vertical"
                    app:category_choose="@{categoryChoose}"
                    app:item_categories_main="@{viewModel.choosesCategory}"
                    app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                    app:list_categories_main="@{viewModel.listCategories}"
                    tools:listitem="@layout/item_category" />

                <Button
                    android:id="@+id/showAllCategory"
                    android:layout_width="@dimen/_20gkdp"
                    android:layout_height="@dimen/_20gkdp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/_20gkdp"
                    android:layout_marginBottom="@dimen/_20gkdp"
                    android:background="@drawable/category_not_active"
                    android:text="..." />

                <com.jackandphantom.carouselrecyclerview.CarouselRecyclerview
                    android:id="@+id/carouselRecyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200gkdp"
                    android:layout_marginStart="@dimen/_5gkdp"
                    android:layout_marginEnd="@dimen/_5gkdp"
                    app:item_listener="@{itemListener}"
                    app:items_cards="@{viewModel.listCards}" />

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/toCamera"
            android:background="@drawable/fub_add"
            android:layout_width="@dimen/_30gkdp"
            android:layout_height="@dimen/_30gkdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_20gkdp"
            android:layout_marginBottom="@dimen/_20gkdp" />
    </RelativeLayout>
</layout>