<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#01092D"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10gkdp"
        android:layout_marginTop="@dimen/_10gkdp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_header_menu" />

    <TextView
        android:fontFamily="@font/comfortaa_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10gkdp"
        android:layout_marginTop="@dimen/_5gkdp"
        android:layout_marginBottom="@dimen/_5gkdp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/_15gkdp" />


</LinearLayout>