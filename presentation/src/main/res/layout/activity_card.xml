<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.activity.add.AddActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="com.gkreduction.cardholder.ui.activity.card.CardViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.gkreduction.cardholder.ui.widjet.MyCardView
            android:id="@+id/card_item"
            android:layout_width="@dimen/_180gkdp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/_10gkdp"
            android:background="@color/overlay_light_10"
            app:cardCornerRadius="@dimen/_10gkdp"
            app:set_color_gradient="@{viewmodel.card}">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10gkdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_header"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20gkdp"
                    android:gravity="center"
                    android:text="@{viewmodel.card.cardName}" />

                <TextView
                    android:id="@+id/text_description"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20gkdp"
                    android:gravity="center"
                    android:text="@{viewmodel.card.cardBaseInfo}" />

                <com.gkreduction.cardholder.ui.widjet.BarcodeView
                    android:id="@+id/barcode"
                    android:layout_width="@dimen/_140gkdp"
                    android:layout_height="@dimen/_250gkdp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:adjustViewBounds="true"
                    android:background="@color/white"
                    android:padding="@dimen/_5gkdp"
                    android:rotation="270"
                    android:scaleType="centerInside"
                    android:scaleX="1.8"
                    android:scaleY="1.8"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:set_card="@{viewmodel.card}" />

            </LinearLayout>

        </com.gkreduction.cardholder.ui.widjet.MyCardView>

    </RelativeLayout>
</layout>