<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:id="@+id/chooser_root"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25gkdp"
        android:layout_marginStart="@dimen/_5gkdp"
        android:layout_marginTop="@dimen/_3gkdp"
        android:layout_marginEnd="@dimen/_5gkdp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_chooser"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_3gkdp"
            android:layout_weight="0.1"
            android:adjustViewBounds="true"
            android:padding="@dimen/_6gkdp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_chooser"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_category_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:ellipsize="marquee"
            android:gravity="start|center_vertical"
            android:hint="Start typing"
            android:maxLines="1"
            android:paddingStart="@dimen/_5gkdp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="@dimen/_10gkdp"
            android:textStyle="bold" />


    </LinearLayout>
</layout>